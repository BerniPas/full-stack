

<div class="container mt-5">
    <h1>
        Formulario de Actualización de Productos
    </h1>
</div>


{{#if message}}   
    <div class="alert alert-success w-25">{{ message }}</div>    
{{/if}}

<div class="container mt-5">
    <form method="post" action="/product/update/{{_id}}">
        <div class="mb-3">
            <label for="nombre" class="form-label">Nombre </label>
            <input type="text" class="form-control" id="nombre" name="nombre" aria-describedby="emailHelp" value={{nombre}}>
        </div>
        <div class="mb-3">
            <label for="precio" class="form-label">Precio </label>
            <input type="number" class="form-control" id="precio" name="precio" aria-describedby="emailHelp" value={{precio}}>
        </div>
        <div class="mb-3">
            <label for="imagen" class="form-label">Imagen </label>
            <input type="text" class="form-control" id="imagen" name="imagen" value={{imagen}}>
        </div>
                <div class="mb-3">
            <label for="descripcion" class="form-label">Descripción </label>
            <input type="text" class="form-control" id="descripcion" name="descripcion" value={{descripcion}}>
        </div>
        <div class="mb-3 text-center ">
            <button type="submit" class="btn btn-warning w-25">Actualizar Producto</button>
            <button type="reset" class="btn btn-danger w-25">Borrar Datos</button>
        </div>
    </form>
</div>